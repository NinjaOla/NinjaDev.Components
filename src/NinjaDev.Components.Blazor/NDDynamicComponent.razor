@typeparam T
@using Microsoft.AspNetCore.Components.Forms
@using NinjaDev.Components.Blazor.Models


@foreach(var property in CreateComponents())
{
    @RenderDynamic(property)
}

@{


    RenderFragment RenderDynamic(INDEditProperty property)
    {
        if(property.ComponentType == null)
        {
            return property.Render();
        }
        return 
        @<DynamicComponent Type=property.ComponentType Parameters=property.ComponentParameters />;
    
    }
}

